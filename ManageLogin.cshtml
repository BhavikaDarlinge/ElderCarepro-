
@{
    ViewBag.Title = "ManageLogin";
  

}


<div class="row" style="margin-top:50px;">
    <div class="card col-lg-9" >
        <div class="card-header">
            <h5 class="card-title">Sign In</h5>
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-md-6 col-lg-4">

                    <div class="form-group">
                        <label class="form-label">Mobile No</label>
                        <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>

                        <input type="text" name="name" value=""  id="txtmobile" class="form-control" max="10" placeholder="98*******"/>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Password</label>
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>

                        <input type="password" name="name" value="" id="txtpass" class="form-control" />
                    </div>
                    <div class="form-group">
                      <a href="/Vitals/ManageVitals" class="btn btn-success" id="btnLogin">Login</a>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                Don't have an account!
                                <a href="/PersonalDetails/ManagePersonalDetails"> Sign Up </a>

                            </div>
                        </div>
                    </div>
            
               


                </div>
        </div>
    </div>
</div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/ElderCarePro/ManageLoginPage.js"></script>
<script>
        $(document).ready(function () {
            ManageLogin.Init();
        });

</script>

