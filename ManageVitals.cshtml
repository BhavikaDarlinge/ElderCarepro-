
@{
    ViewBag.Title = "ManageVitals";
}
<link href="~/Content/datepicker.css/bootstrap-datepicker.min.css" rel="stylesheet" />
<div class="row">
    <div class="card col-12">
        <div class="card-header">
            <h4 class="card-title">Vitals</h4>
        </div>
        <div class="card-body">
            <div class="row">
               
                <div class="col-md-6 col-lg-4">

                    <div class="form-group">
                        <button type="button" class="btn btn-primary ml-auto" id="btnBp">Blood Pressure</button>

                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-warning ml-auto" id="btnPulse">Pulse Rate</button>

                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-danger ml-auto" id="btnSugar">Blood Sugar</button>

                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-success ml-auto" id="btnTemp">Body Temperture</button>

                    </div>
                </div>
                <div class="col-md-6 col-lg-4" style="display:none;" id="divBp">
                   <h5>Blood Pressure </h5>
                     <div class="form-group">
                      
                            Date 
                            <input type="date" name="name" value=""  id="dateofBp"  class="form-control"/>
                       
                    </div>
                    
                    <div class="form-group">
                        <label>Systolic Pressure</label>
                        <input type="text" name="name" value="" id="txtsystolicpressure" class="form-control" placeholder="Systolic Pressure"/>
                    </div>
                    <div class="form-group">
                        <label>Diastolic Pressure</label>
                        <input type="text" name="name" value="" id="txtdiastolicpressure" class="form-control" placeholder="Diastolic Pressure"/>
                    </div>
                    
                    <div class="form-group">
                        <label>Choose Side</label>
                        <select class="form-control" id="ddlchooseside">

                        </select>
                    </div>
                   
                    <div class="form-group">
                        <label>Position</label>
                        <select class="form-control" id="ddlposition">

                        </select>
                    </div>
                    <button type="button" class="btn btn-primary ml-auto" id="btnBpressure">Submit</button>
                    <button type="button" class="btn btn-primary ml-auto" id="btnCancel">Cancel</button>

                </div>
                <div class="col-md-6 col-lg-4" style="display:none;" id="divPulse">
                 <h5>Pulse Rate</h5>
                <br />
                    <div class="form-group">

                        Date
                        <input type="date" name="name" value="" id="dateofpulse" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label>Pulse Rate</label>
                        <input type="text" name="name" value="" id="txtpulserate" class="form-control" placeholder="Pulse Rate" />
                    </div>
                   
                    <button type="button" class="btn btn-primary ml-auto" id="btnpulserate">Submit</button>
                    <button type="button" class="btn btn-primary ml-auto" id="btnCancel">Cancel</button>

                </div>
                <div class="col-md-6 col-lg-4" style="display:none;" id="divSugar">
                    <h5>Blood Sugar</h5>
                    
                    <div class="form-group">

                        Date
                        <input type="date" name="name" value="" id="dateofBsugar" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label>Sugar Concentration</label>
                        <input type="text" name="name" value="" id="txtSugarConcen" class="form-control" placeholder="Sugar Concentration" />
                    </div>
                    <div class="form-group">
                        <label>Measured</label>
                        <select class="form-control" id="ddlsugarmeasured"></select>
                    </div>
                    <button type="button" class="btn btn-primary ml-auto" id="btnBsugar">Submit</button>
                    <button type="button" class="btn btn-primary ml-auto" id="btnCancel">Cancel</button>


                </div>
               
                <div class="col-md-6 col-lg-4" style="display:none;" id="divTemp">
                    <h5>Body Tempture</h5>          
                    <div class="form-group">

                        Date
                        <input type="date" name="name" value="" id="dateofTemp" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label>Temperture Measure</label>
                        <input type="text" name="name" value="" id="txtMeaTemp" class="form-control" placeholder="Temperture Measure"/>
                    </div>

                    <button type="button" class="btn btn-primary ml-auto" id="btnBTemp">Submit</button>
                    <button type="button" class="btn btn-primary ml-auto" id="btnCancel">Cancel</button>


                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/ElderCarePro/ManageVital.js"></script>
<script>
    ManageVitals.Init();
</script>