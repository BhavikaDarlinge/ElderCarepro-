<div class="row">
    <div class="card col-12">
        <div class="card-header">
            <h5 class="card-title">Register Form</h5>
            <div style="float:right; font-size: 100%; position: relative; top:-10px"><a id="signinlink" href="/loginform/managelogin">sign in</a></div>

        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-md-6 col-lg-4">
                   
                    <div class="form-group">
                        <div class="col-sm-6">
                        First Name
                            <span style="color: #FF0000; font-weight: bold">*</span>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="firstname" id="txtfirstname" placeholder="Enter First Name">

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-6">
                            Password
                            <span style="color: #FF0000; font-weight: bold">*</span>
                        </div>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" name="passwd" id="txtpass" placeholder="Password">

                        </div>
                    </div>
                   
          
                    <div class="form-group">
                        <div class="col-sm-6">
                          Date Of Birth
                            <span style="color: #FF0000; font-weight: bold">*</span>
                        </div>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" id="dateofbirth"/>

                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-sm-6">
                            Mobile No
                            <span style="color: #FF0000; font-weight: bold">*</span>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtmobileno" placeholder="992288****" maxlength="10" />

                        </div>
                    </div>



                </div>
                <div class="col-md-6 col-lg-4">

                    <div class="form-group">
                        <div class="col-sm-6">
                            Last Name
                            <span style="color: #FF0000; font-weight: bold">*</span>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="lastname" id="txtlastname" placeholder="Enter Last Name">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6">
                            Confirm Password

                        </div>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" name="passwd" id="txtconfirmpass" placeholder="Confirm Password">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6">
                            Gender
                            <span style="color: #FF0000; font-weight: bold">*</span>
                        </div>
                        <div class="col-sm-8">
                            <select class="form-control" id="ddlgender">
                                <option value="0">--select gender--</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-6">
                            Email
                            <span style="color: #FF0000; font-weight: bold">*</span>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="email" id="txtemail" placeholder="Email address">

                        </div>
                    </div>
                   
                    <div class="form-group">
                        <!-- button -->
                        <div class="col-md-offset-3 col-md-9">

                            <button type="button" class="btn btn-primary" id="btnSumbit">SAVE</button>
                            <button type="reset" class="btn btn-warning" id="btncancel">Cancel</button>

                        </div>
                    </div>

                </div>
               
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/ElderCarePro/ManagePersonalDetails.js"></script>
    <script>
        $(document).ready(function () {
            ManagePersonalDetails.Init();
        });

    </script>
